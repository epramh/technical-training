<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem   id="menu_estate_root" 
                name='Real Estate'
                action='estate_property_action'
                sequence="1"/>
        <menuitem   id="menu_advertisements_root" 
                    name='Advertisements'
                    parent='menu_estate_root'
                    action='estate_property_action'
                    sequence="1"/>
            <menuitem   id="menu_properties_root" 
                        name='Properties'
                        parent='menu_advertisements_root'
                        action='estate_property_action'
                        sequence="1"/>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" 
            decoration-success="state in ['new','offer received']"  
            decoration-bf="state == 'accepted'" 
            decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" optional="hide" string="Available From"/>
                <field name="state" optional="hide"></field>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_sold" string='sold' type="object"/>
                    <button name="action_cancel" string='cancel' type="object"/>
                    <field name="state" widget="statusbar" attrs="{'invisible':[('status','==','canceled')]}" statusbar_visible="new,received,accepted,sold,canceled"></field>
                </header>
                <sheet>
                    <!-- <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/> -->
                    <div class="ep_title">
                        <!-- <div class="ep_edit_only">
                            <label for="name"/>
                        </div> -->
                        <h1 class="mb32">
                            <field name="name"/>
                            <h2>
                                <field name="tag_ids" widget="many2many_tags" class="h2"/>
                            </h2>
                        </h1>
                        <!-- <field name="active" invisible="1"/> -->
                    </div>
                    <group colspan="1" col="2">
                        <group>
                            <field name="status" attrs="{'readonly':True}"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                    </group>
                    <group colspan="1" col="2">
                        <group>
                            <field name="property_type_id"/>
                        </group>
                        <group>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <group colspan="1" col="2">
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <group colspan="1" col="2">
                        <group>
                            <field name="date_availability"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Onglets 'Description' -->
                        <page string="Description">
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group col="4">
                                <group colspan="1">
                                    <field name="garden"/>
                                </group>
                                <group colspan='3'>
                                <field name="message"/>
                                </group>
                            </group>
                            <group>
                                <field name="garden_area"/>
                            </group>
                            <group>
                                <field name="garden_orientation"/>
                            </group>
                            <group>
                                <field name="total_area"/>
                            </group>
                        </page>

                        <!-- Onglets 'Offers' -->
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" 
                                widget='estate_property_offer_view_tree'/>
                            </group>
                        </page>

                        <!-- Onglets 'Other Info' -->
                        <page string="Other Info">
                            <group>
                                <field name='user_id'/>
                            </group>
                            <group>
                                <field name='partner_id'/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string='Search Properties'>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" 
                string="Living Area(sqm)" 
                filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                <filter name="date_availability" 
                string="Available" 
                domain="[(
                    'date_availability',
                    '&lt;=', 
                    context_today().strftime('%Y-%m-%d')
                )]"/>
                <group expand="1" 
                string="Group By">
                    <filter name="postcode" 
                    string="postcode" 
                    context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
